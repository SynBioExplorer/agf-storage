{
  "bucket": "agf-instrument-data",
  "TransitionDefaultMinimumObjectSize": "all_storage_classes_128K",
  "Rules": [
    {
      "ID": "DeleteOldZips",
      "Status": "Enabled",
      "Filter": {
        "Prefix": "downloads/zips/"
      },
      "Expiration": {
        "Days": 7
      },
      "Description": "Automatically delete generated zip files after 7 days to manage storage costs"
    },
    {
      "ID": "TransitionToGlacierAfter2Years",
      "Status": "Enabled",
      "Filter": {
        "Prefix": "raw/"
      },
      "Transitions": [
        {
          "Days": 730,
          "StorageClass": "GLACIER"
        }
      ],
      "Description": "Move raw instrument data to Glacier after 2 years for cost optimization"
    }
  ]
}
